<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Servlet definitions and mappings remain unchanged -->
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>Controller.ClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/ClientServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>VoitureServlet</servlet-name>
        <servlet-class>Controller.VoitureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VoitureServlet</servlet-name>
        <url-pattern>/VoitureServlet</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ParcServlet</servlet-name>
        <servlet-class>Controller.ParcServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ParcServlet</servlet-name>
        <url-pattern>/ParcServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DateServlet</servlet-name>
        <servlet-class>Controller.DateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DateServlet</servlet-name>
        <url-pattern>/DateServlet</url-pattern>
    </servlet-mapping>
    <!-- Other servlet mappings omitted for brevity -->
    <welcome-file-list>
        <welcome-file>redirectToHome.jsp</welcome-file>
    </welcome-file-list>
</web-app>